{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 500,
    "data": {
        "url": "data/global_cases.json"
    },
    "transform": [
      {
        "window": [{
          "op": "rank",
          "as": "rank"
        }],
        "sort": [{ "field": "Cases - cumulative total per 100000 population", "order": "descending" }]
      }, {
        "filter": "datum.rank <= 10"
      }
    ],
   
    "encoding": {
      "x": {
          "field": "Cases - cumulative total per 100000 population",
          "type": "quantitative"
      },
      "y": {
          "field": "Name",
          "type": "nominal",
          "sort": {"field": "Cases - cumulative total per 100000 population", "op": "average", "order":"descending"}
      }
    },
    "layer": [{
        "mark": "bar",
        "encoding": {
          "color": {
            "field": "Cases - cumulative total per 100000 population",
            "type": "quantitative",
            "title": "Cases per 100000 population"
          }
        }
      }, {
        "mark": {
          "type": "text",
          "align": "right",
          "xOffset": -4,
          "aria": false
        },
        "encoding": {
          "text": {"field": "Cases - cumulative total per 100000 population", "type": "quantitative"}
        }
      }]
  }
  