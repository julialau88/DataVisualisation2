{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Diabetes prevalence (%) of Population Ages 20 to 79",
    "width": 1000,
    "height": 600,
    "data":{"url": "data/prevalence.json"},
    "projection": {"type": "equalEarth"},
    "params": [
        {
            "name": "year_selection",
            "value": 2010,
             "bind": {
            "input": "range",
            "min": 2010,
            "max": 2019,
            "step": 9,
            "name": "Year: "
             }
            }
    ],
    "layer":[
        {
        "data": {
            "url": "data/ne_110m_admin_0_countries.json",
            "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
        },
        "mark": {
            "type": "geoshape",
            "fill": "#ddd",
            "stroke": "white",
            "strokeWidth": 1
        }
    
        },
    {
        "data": {
            "url": "data/location.json"
        },
        "mark": {
            "type": "text",
            "baseline": "middle",
            "fontWeight": "bold",
            "fontSize": 10,
            "fontStyle": "italic"
        },
        "encoding": {
            "text": {"field": "country", "type": "nominal"},
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "color": {"value": "black"},
            "opacity": {
            "condition": {
            "test": "datum['country'] == 'Papua New Guinea'||datum['country'] == 'Malaysia' || datum['country'] == 'Mexico' || datum['country'] == 'Brazil' || datum['country'] == 'India'|| datum['country'] == 'Libya'|| datum['country'] == 'Saudi Arabia'|| datum['country'] == 'Sudan' || datum['country'] == 'South Africa'",
            "value": 1
           },
           "value": 0
           }
      }},
        {
            "data": {
                "url": "data/prevalence.json"
            },
            "transform": [{
                    "lookup": "Entity",
                    "from": {
                        "data": {
                            "url": "data/ne_110m_admin_0_countries.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                },
                { "filter": "datum['Year'] == year_selection" }
            ],
            "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
            "encoding": {
                "shape": {"field": "geo", "type":"geojson"},
                "color": {
                    "field": "Prevalence",
                    "type": "quantitative"
                }
            }
        }
    ],
    "config": {}
   }
   