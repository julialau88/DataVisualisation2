{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 10 Leading Causes of Death in Malaysia in 2019",
    "width": 400,
    "height": 400,
    "data": {"url": "data/deaths_2019.json"},
    "transform": [
        {
            "window": [{"op": "row_number", "as": "rank"}],
            "sort": [{ "field": "percent", "order": "descending" }]
        },
        {
            "filter": "datum.rank <= 10"
        },
        {
            "calculate": "datum.cause", "as": "Causes of Deaths"
        },  
        {
            "calculate": "datum.percent", "as": "Percentage"
        }
      ],
    "encoding": {
      "y": {"field": "Causes of Deaths", "type": "nominal", "sort": "-x"},
      "x": {"field": "Percentage", "type": "quantitative", "scale": {"domain": [0, 35]}}
    },
    "layer": [
      {
      "mark": "bar"
      }, 
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 3
        }
      }]
  }
  