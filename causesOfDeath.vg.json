{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bar Chart with a spacing-saving y-axis",
  "data": {"url": "https://raw.githubusercontent.com/julialau88/DataVisualisation2/main/data/death_causes_2019.csv"},
  "height": {"step": 45},
  "width": "container",
  "params": [
    {
      "name": "highlight",
      "select": {"type": "point", "on": "mouseover"}
    },
    {"name": "select", "select": "point"}
  ],
    "transform": [
    {
      "window": [{"op": "row_number", "as": "rank"}],
      "sort": [{"field": "val_per", "order": "descending"}]
    },
    {"filter": "datum.rank <= 10"},
    {"calculate": "datum.cause", "as": "Causes of Deaths"},
    {"calculate": "datum.val*100", "as": "Percentage"}
  ],
  "mark": {"type": "bar", "yOffset": 5, "cornerRadiusEnd": 2, "height": {"band": 0.5},  "stroke": "black",
    "cursor": "pointer"},
  "encoding": {
    "y": {
      "field": "Causes of Deaths",
      "scale": {"padding": 0},
      "sort": "-x",
      "axis": {
        "bandPosition": 0,
        "grid": true,
        "domain": false,
        "ticks": false,
        "labelAlign": "left",
        "labelBaseline": "middle",
        "labelPadding": -5,
        "labelOffset": -15,
        "titleX": 5,
        "titleY": -5,
        "titleAngle": 0,
        "titleAlign": "left"
      }
    },
    "x": {
      "field": "Percentage",
      "aggregate":"max",
      "axis": {"grid": false},
      "title": "Percentage of deaths caused"
    },
      "fillOpacity": {
      "condition": {"param": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "select",
          "empty": false,
          "value": 2
        },
        {
          "param": "highlight",
          "empty": false,
          "value": 1
        }
      ],
      "value": 0
    },
    "tooltip":[
      {"field": "Causes of Deaths", "type": "nominal"},
      {"field": "Percentage", "type": "quantitative", "format": ".2f" }
    ],
    "color": {
        "condition": {"test": "datum['Causes of Deaths'] != 'Diabetes and kidney diseases'",    "value": "#FFBB33"},
        "value": "#e34a33"
      }
  }
}
